{
    "extends": ["stylelint-config-recommended", "stylelint-config-prettier"],
    "rules": {
        "selector-class-pattern": null,
        "selector-no-qualifying-type": [true, { "ignore": ["attribute", "class"] }],
        "string-no-newline": null,
        "indentation": 4,
        "string-quotes": "single",
        "max-nesting-depth": 2
    }
}
